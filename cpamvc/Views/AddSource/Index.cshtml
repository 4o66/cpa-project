<div class="container mb-5">
    <!-- First Card -->
    <div class="row">
        <div class="col-12 card card-3 pb-4">
            <div class="row">
                <div class="col-6">
                    <div class="card text-center p-2 card-3 title-card text-light"><span class="h4">Add Article</span></div>
                </div>
                <div class="col-6">

                </div>
            </div>
            <div class="row px-5 pt-4">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <form action="">
                        <div class="form-group">
                            <label for="object-a">Company</label>
                            <select name="company" class="form-control">
                                <option value="Apple">Apple</option>
                                <option value="">Company</option>
                                <option>Company</option>
                                <option>Company</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="source">Text Source</label>
                            <input type="text" name="source" class="form-control">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="year">Year</label>
                                        <select name="year" class="form-control">
                                            <option value="2018">2018</option>
                                            <option value="2017">2017</option>
                                            <option value="2016">2016</option>
                                            <option value="2015">2015</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="year">Month</label>
                                        <select name="year" class="form-control">
                                            <option value="Jan">Jan</option>
                                            <option value="Feb">Feb</option>
                                            <option value="Mar">Mar</option>
                                            <option value="Apr">Apr</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label for="year">Day</label>
                                        <select name="year" class="form-control">
                                            <option value="1">1</option>
                                            <option value="2">2</option>
                                            <option value="3">3</option>
                                            <option value="4">4</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="source-text">Article Text</label>
                            <textarea class="form-control" id="source-text" name="source-text" rows="6"></textarea>
                        </div>
                        <div class="form-group d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary ml-auto">Save Article</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-3"></div>
            </div>

        </div>
