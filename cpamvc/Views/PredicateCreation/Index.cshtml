<div class="container mb-5">
    <!-- First Card -->
    <div class="row">
        <div class="col-12 card card-3 pb-4">
            <div class="row">
                <div class="col-6">
                    <div class="card text-center p-2 card-3 title-card text-light"><span class="h4">Object Creation</span></div>
                </div>
                <div class="col-6">

                </div>
            </div>
            <div class="row px-5 pt-4">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <form id="predicate-form" name="predicate-form" action="">
                        <div class="form-group">

                            <label for="object-a">
                                Object A
                            </label>
                            <select name="object-a" id="object-a" class="form-control">

                                @foreach (RelationObject o in objects)
                                {

                                    <option value="@o.Name">@o.Name</option>

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="object-b">
                                Object B
                            </label>
                            <select name="object-b" id="object-b" class="form-control">

                                @foreach (RelationObject o in objects)
                                {

                                    <option value="@o.Name">@o.Name</option>

                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <div><label for="">Object Type</label></div>
                            <div class="card w-100 p-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="predicate-type-radio" id="attribute" value="isa" checked>
                                    <label class="form-check-label" for="attribute">
                                        Attribute (is a)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="predicate-type-radio" id="association" value="isp">
                                    <label class="form-check-label" for="association">
                                        Association (is part of)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="predicate-type-radio" id="casuality" value="isc">
                                    <label class="form-check-label" for="casuality">
                                        Casuality (is caused by)
                                    </label>
                                </div>
                            </div>
                        </div>

                    </form>
                    <div class="form-group">
                        <button id="save-predicate-button" class="btn btn-primary">Save Predicate</button>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/addPredicate.js" asp-append-version="true"></script>
