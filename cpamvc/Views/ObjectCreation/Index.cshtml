<div class="container mb-5">
    <!-- First Card -->
    <div class="row">
        <div class="col-12 card card-3 pb-4">
            <div class="row">
                <div class="col-6">
                    <div class="card text-center p-2 card-3 title-card text-light"><span class="h4">Object Creation</span></div>
                </div>
                <div class="col-6">

                </div>
            </div>
            <div class="row px-5 pt-4">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <form id="objectForm" action="">
                        <div class="form-group">
                            <label for="object-form-1">Object Form 1</label>
                            <input type="text" name="object-form-1" class="form-control">
                        </div>
                     
                        <div class="form-group">
                            <div><label for="">Object Type</label></div>
                            <div class="card w-100 p-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="typeradio" id="resource" value="1" checked>
                                    <label class="form-check-label" for="resource">
                                        Resource (e.g. Product)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="typeradio" id="event" value="2">
                                    <label class="form-check-label" for="event">
                                        Event (e.g. Sales)
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="typeradio" id="agent" value="3">
                                    <label class="form-check-label" for="agent">
                                        Agent (e.g. Sales Rep)
                                    </label>
                                </div>
                            </div>
                        </div>

                    </form>
                    <div class="form-group">
                        <button id="submitObject" class="btn btn-primary">Save Object</button>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>

        </div>
    </div>

</div>

